<%= form_with model: @session_ally, :html => {:class => "form-horizontal center"}, local: true  do |f| %>

  <% if @session_ally.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@session_ally.errors.count, "error") %> prohibited
        this session_ally from being saved:
      </h2>
      <ul>
        <% @session_ally.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :hit_points, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :hit_points, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :initiative, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :initiative, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :armour, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :armour, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :backstory, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_area :backstory, class: "form-control" %>
    </div>
  </div>

    <div class="form-group">
    <%= f.label :goals, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_area :goals, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :image_url, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :image_url, class: "form-control" %>
    </div>
  </div>

  <div class="row" style="padding:15px;">
    <%= f.submit "Submit", class: "btn btn-default btn-primary"%>
    <a href="<%= session_allies_path %>" class="btn btn-primary" style="margin-left:5px;">Back</a>
  </div>
 <% end %>
